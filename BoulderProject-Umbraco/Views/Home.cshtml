@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "_Layout.cshtml";
}

<!-- Masthead -->
<header class="masthead" id="start">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Deine Boulder Experience in der Nähe</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">Starte noch heute und suche die Herausforderung an unseren individuell entworfenen Routen. Egal ob Anfänger oder Profi!</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Mehr Erfahren!</a>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section class="page-section bg-primary" id="about">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Bei uns ist für jeden was dabei!</h2>
                <hr class="divider light my-4">
                <p class="text-white-75 mb-4">
                    JEDER kann Bouldern - im BOULDER-POINT Kaltenkirchen
                    <br />
                    Keine Anmeldung, Vorkenntnisse & Ausrüstung nötig! Auch für Kinder ab 6 Jahren geeignet.
                    <br />

                    Wir bieten euch eine von Schleswig-Holsteins größten Boulderhallen!
                </p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Zu den Angeboten!</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">Angebote</h2>
        <hr class="divider my-4">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="far fa-4x fa-clock text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Freies Klettern</h3>
                    <p class="text-muted mb-0">Einfach reinschauen und Erfahrung sammeln!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="far fa-4x fa-compass text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Grundkurse</h3>
                    <p class="text-muted mb-0">Mit der passenden Vorbereitung lässt sich jede Wand erklimmen!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-birthday-cake text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Geburtstage</h3>
                    <p class="text-muted mb-0">Feiern Sie mit Groß und Klein in unserer Halle!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-heart text-primary mb-4"></i>
                    <h3 class="h4 mb-2">Betriebssport</h3>
                    <p class="text-muted mb-0">Wir bieten Pakete für Unternehmen an!</p>
                </div>
            </div>
        </div>
    </div>
</section>

