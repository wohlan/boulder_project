<!-- Call to Action Section -->
<section class="page-section bg-dark text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ich bin ein Platzhalter!</h2>
        <a class="btn btn-light btn-xl js-scroll-trigger" href="#start">Nach oben!</a>
    </div>
</section>

<!-- Contact Section -->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">
                    Kontaktiere uns!
                </h2>
                <hr class="divider my-4">
                <p class="text-muted mb-5">Rufen Sie uns an oder schreiben Sie eine E-Mail. Unser Team kümmert sich um all ihre Fragen.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                <div>+1 (202) 555-0149</div>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                <!-- Make sure to change the email address in anchor text AND the link below! -->
                <a class="d-block" href="mailto:contact@yourwebsite.com">contact@yourwebsite.com</a>
            </div>
            <br />

        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
             
                <hr class="divider my-4">
                <p class="text-muted mb-3">Oder einfach über unser Kontaktformular.</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                @if (TempData["ContactSuccess"] != null && (bool)TempData["ContactSuccess"])
                {
                    <p>Nachricht erfolgreich gesendet</p>
                }
                else
                {
                    Html.RenderAction("RenderForm", "ContactSurface");
                }
            </div>
        </div>

    </div>
</section>