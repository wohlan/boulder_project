<section class="page-section" id="prices">
    <div class="container text-center">
        <h2 class="mb-4">Preise</h2>
        <hr class="divider my-4" />
        <table class="table text-left" style="max-width:600px;margin:0 auto;">
            <thead>
                <tr>
                    <th>Angebot</th>
                    <th>Erwachsene</th>
                    <th>ermäßigt*</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var part in (string[])Model.Value("angebot"))
                {
                    var stringArray = part.Split(';');

                    <tr>
                        @if (stringArray[0].Contains('('))
                        {
                            var twoParts = stringArray[0].Split('(');
                            <td>
                                @twoParts[0]
                                <br />
                                <small>(@twoParts[1]</small>
                            </td>
                        }
                        else
                        {
                            <td>@stringArray[0]</td>
                        }
                        @if (@stringArray.Length > 1)
                        {
                            <td>@stringArray[1]</td>
                        }
                        else
                        {
                            <td></td>
                        }
                        @if (@stringArray.Length > 2)
                        {
                            <td>@stringArray[2]</td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                }
                @if ((string[])Model.Value("leihausrustung") != null)
                {
                    <tr>
                        <th>Leihausrüstung</th>
                        <th></th>
                        <th></th>
                    </tr>

                    foreach (var part in (string[])Model.Value("leihausrustung"))
                    {

                        var stringArray = part.Split(';');

                        <tr>
                            @if (stringArray[0].Contains('('))
                            {
                                var twoParts = stringArray[0].Split('(');
                                <td>
                                    @twoParts[0]
                                    <br />
                                    <small>(@twoParts[1]</small>
                                </td>
                            }
                            else
                            {
                                <td>@stringArray[0]</td>
                            }
                            @if (@stringArray.Length > 1)
                            {
                                <td>@stringArray[1]</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (@stringArray.Length > 2)
                            {
                                <td>@stringArray[2]</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                }


            </tbody>
        </table>

        <div class="text-left col-lg-6 m-auto">
            <hr class="divider my-4" />
            <small>
                <b>*ermäßigt:</b>
                <p class="m-auto">
                    - Kinder und Jugendliche, die noch nicht 18 Jahre alt sind
                    <br />
                    - Schüler und Studenten unter Vorlage einer gültigen Bescheinigung
                    <br />
                    - Mitglieder unserer Kooperationspartner
                    <br />
                    <br />

                    Dauerkarten sind hiervon ausgenommen. Rabatte sind untereinander nicht kombinierbar.
                </p>
            </small>
        </div>
    </div>
    </div>
</section>




